<li class="role role-{{role.name}} {{assignedClass}}">
    <div class="deployment-role-label">
        {{role.name}}
    </div>
    <b>{{role.name}}</b>
    {{#if roleAssigned}}
        <select class="selectpicker"  {{action "updateNodeCount" this on="change"}}>
            {{#each option in availableOptions}}
                {{#if option.selected}}
                    <option selected>{{option.label}}</option>
                {{else}}
                    <option >{{option.label}}</option>
                {{/if}}
            {{/each}}
        </select>
    {{/if}}
    <a class="role-option delete">
        <i class="fa fa-times" {{action "removeRole"}}></i>
    </a>
    <a class="role-option edit" >
        <i class="fa fa-pencil" {{action "editRole"}}></i>
    </a>
</li>
