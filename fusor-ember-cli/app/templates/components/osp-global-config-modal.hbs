
{{#pf-modal-base idModal='editGlobalServiceConfigModal'
                 openModal=openModal
                 title="Edit Global Configuration"}}

      {{#pf-modal-body}}
          <div role="tabpanel" class="tab-pane active global-config-settings-content">
              <div class="form-horizontal">
                  <fieldset>
                      <div class="required">
                        {{#each edittedPlanParameters as |planParameter|}}
                          {{#if planParameter.isBoolean}}
                            {{check-f label=planParameter.displayId checked=planParameter.value labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description}}
                          {{else}}
                            {{#if rolerParameter.isPassword}}
                              {{text-f label=planParameter.displayId value=planParameter.value  type='password' labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description}}
                            {{else}}
                              {{text-f label=planParameter.displayId value=planParameter.value type=planParameter.inputType labelSize='col-md-6' inputSize='col-md-5' isRequired=false helpText=planParameter.description}}
                            {{/if}}
                          {{/if}}
                        {{/each}}
                      </div>
                  </fieldset>
              </div>
          </div>      {{/pf-modal-body}}

      {{#pf-modal-footer}}
          <button {{action 'cancelModal'}} class="btn btn-default">
              Cancel
          </button>
          <button {{action 'saveGlobalServiceConfig'}} class="btn btn-primary">
              Submit
          </button>
      {{/pf-modal-footer}}

{{/pf-modal-base}}
