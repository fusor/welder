<div class="row">
    <div class="col-md-12">
        <h2>Available Deployment Roles</h2>
        {{#draggable-object-target action="unassignRole"}}
            <div class="row deployment-roles deployment-roles-unassigned deployment-roles-assignable {{droppableClass}}">
              {{#each role in unassignedRoles}}
                {{#draggable-object content=role}}
                  {{deployment-role role=role edit="editRole"}}
                {{/draggable-object}}
              {{/each}}
              {{#unless noRolesAssigned}}
                {{#draggable-object content=role}}
                  {{deployment-role role-assigned=false}}
                {{/draggable-object}}
              {{/unless}}
            </div>
        {{/draggable-object-target}}
    </div><!-- /col -->
</div><!-- /row -->
<div class="row">
    <div class="col-md-12">
        <h2>Node Profiles</h2>
        {{#each profile in profiles}}
            <div class="row">
                <div class='col-md-7'>
                  {{#if nodes}}
                    {{node-profile profile=profile nodes=nodes plan=model doAssign=true assignRole="assignRole" unassignRole="unassignRole" editRole="editRole"}}
                 {{else}}
                    {{node-profile profile=profile plan=model doAssign=true assignRole="assignRole" unassignRole="unassignRole" editRole="editRole"}}
                 {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
    <div class="col-sm-6 col-md-5">
        <!-- a network topology is planned for this space -->
    </div>
</div>

<br />
<div class="row">
    <div class='col-md-9'>
        <div class='pull-right'>
          {{#link-to 'register-nodes' class='btn btn-default'}}
              Back
          {{/link-to}}
            <button {{action 'deployPlan' nextStepRouteName}}
              {{bind-attr disabled=disableAssignNodesNext}}
                    class='btn btn-primary'>
                Next
            </button>
        </div>
    </div>
</div>
