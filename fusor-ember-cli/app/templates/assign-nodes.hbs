<div class="row">
    <div class="col-md-12">
        <h2>Available Deployment Roles</h2>
        {{#draggable-object-target action="unassignRole"}}
            <ul class="deployment-roles deployment-roles-unassigned deployment-roles-assignable {{droppableClass}}">
              {{#each role in availableRoles}}
                {{#draggable-object content=role}}
                  {{deployment-role role-type=role.roleType role-label=role.roleLabel role-assigned=false edit="editRole"}}
                {{/draggable-object}}
              {{/each}}
              {{#unless noneAssigned}}
                {{#draggable-object content=role}}
                  {{deployment-role role-type='hidden' role-assigned=false}}
                {{/draggable-object}}
              {{/unless}}
            </ul>
        {{/draggable-object-target}}
    </div><!-- /col -->
</div><!-- /row -->
<div class="row">
    <div class="col-md-12">
        <h2>Node Profiles</h2>
        {{#each profile in nodeProfiles}}
            <div class="row">
                <div class='col-md-7'>
                  {{node-profile profile=profile nodeProfiles=nodeProfiles doAssign=true assignRole="assignRole" startDrag="startDrag" stopDrag="stopDrag" edit="editRole" removeRole="removeRole"}}
                </div>
            </div>
        {{/each}}
    </div>
    <div class="col-sm-6 col-md-5">
        <!-- a network topology is planned for this space -->
    </div>
</div>

<br />
<div class="row">
    <div class='col-md-9'>
        <div class='pull-right'>
          {{#link-to 'register-nodes' class='btn btn-default'}}
              Back
          {{/link-to}}
            <button {{action 'saveDeployment' nextStepRouteName}}
              {{bind-attr disabled=disableAssignNodesNext}}
                    class='btn btn-primary'>
                Next
            </button>
        </div>
    </div>
</div>
