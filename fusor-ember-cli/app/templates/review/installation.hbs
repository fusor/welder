{{#if showErrorMessage}}
  <div class="row">
    <div class='col-md-9'>
      <div class='alert alert-danger'>
          <i class="fa fa-2x fa-exclamation-triangle errorForValidation"></i>
          &nbsp;
          {{errorMsg}}
      </div>
    </div>
  </div>
{{/if}}

<div class='row'>
  <div class='col-md-11 col-md-offset-1'>

    {{#accordion-item name=controllers.deployment.nameSatellite isOpen=true}}
      Name: {{#link-to 'satellite'}}{{controllers.deployment.name}}{{/link-to}} <br />

      Organization: {{#link-to 'configure-organization'}}{{controllers.deployment.organization.name}}{{/link-to}} <br />

      Environment: {{#link-to 'configure-environment'}}{{controllers.deployment.lifecycle_environment.name}}{{/link-to}}  <br />

    {{/accordion-item}}

  {{#if isOvirt}}
    {{#accordion-item name=controllers.deployment.nameOvirt isOpen=isOvirtOpen}}

      Setup Type: {{#link-to 'ovirt-setup'}} {{controllers.ovirt-setup.ovirtSetupTitle}} {{/link-to}}
      <br />
      {{#if isSelfHosted}}
          {{review-link label='Hypervisor/Engine' routeName='engine.discovered-host' isRequired=true
                        value=selectedOvirtEngine.name}}
      {{else}}
          {{review-link label='Engine' routeName='engine.discovered-host' isRequired=true
                        value=selectedOvirtEngine.name}}

          {{#review-link label='Hypervisor(s)' routeName='hypervisor.discovered-host' isRequired=true
                         value=selectedHypervisorHosts useYieldInstead=true}}
              <br />
              {{#each host in selectedHypervisorHosts}}
                  {{#link-to 'hypervisor.discovered-host'}} {{host.name}}.rhci.redhat.com {{/link-to}}<br />
              {{/each}}
          {{/review-link}}
      {{/if}}

      <br />
      {{review-link label='Engine admin password' routeName='ovirt-options' isRequired=true isPassword=true
                    value=controllers.deployment.ovirt_engine_admin_password }}

      {{review-link label='Datacenter Name' routeName='ovirt-options' isDefault=true
                    value=controllers.deployment.ovirt_database_name}}

      {{review-link label='Cluster Name' routeName='ovirt-options' isDefault=true
                    value=controllers.deployment.ovirt_cluster_name}}

      {{review-link label='Storage Name' routeName='ovirt-options' isDefault=true
                    value=controllers.deployment.ovirt_storage_name}}

      {{review-link label='CPU Type' routeName='ovirt-options' isDefault=true
                    value=controllers.deployment.ovirt_cpu_type}}

      {{review-link label='Storage Type' routeName='storage' isRequired=true
                    value=controllers.deployment.ovirt_storage_type}}

      {{review-link label='Storage Address' routeName='storage' isDefault=true
                    value=controllers.deployment.ovirt_storage_address}}

      {{review-link label='Storage Path' routeName='storage' isDefault=true
                    value=controllers.deployment.ovirt_share_path}}

      <br />
    {{/accordion-item}}
  {{/if}}

  {{#if isOpenStack}}
    {{#accordion-item name=controllers.deployment.nameOpenStack isOpen=isOpenStackOpen}}
    {{/accordion-item}}
  {{/if}}

  {{#if isCloudForms}}
    {{#accordion-item name=controllers.deployment.nameCloudForms isOpen=isCloudFormsOpen}}
      Installation Location:
        {{#link-to 'where-install'}}
          {{controllers.deployment.cfme_install_loc}}
        {{/link-to}} <br />
    {{/accordion-item}}
  {{/if}}

    <br />
    <br />

    <div class='pull-right'>
      <br />
      <button {{action 'showModal' 'cancelDeploymentModal'}} class='btn btn-default'>Cancel</button>
      {{button-f disabled=buttonDeployDisabled title=buttonDeployTitle action="installDeployment"}}
      <br />
      {{input type="checkbox" name="skipContent" checked=skipContent}} Skip Content (DEV ONLY)
    </div>


  </div>
</div>

{{outlet}}
