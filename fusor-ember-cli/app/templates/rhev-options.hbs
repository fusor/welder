<h4> Engine Configuration </h4>

<div class='row'>
  <div class='col-md-12'>
    <br />
    <form class="form form-horizontal">
      {{text-f label="Engine admin password" type='password' value=ovirt_engine_admin_password cssId='ovirt_engine_admin_password'}}

      {{text-f label="Datacenter Name" value=ovirt_database_name placeholder='Leave blank for default' cssId='ovirt_database_name'}}
      {{text-f label="Cluster Name" value=ovirt_cluster_name placeholder='Leave blank for default' cssId='ovirt_cluster_name'}}
      {{text-f label="Storage name" value=ovirt_storage_name placeholder='Leave blank for default' cssId='ovirt_storage_name'}}

      {{text-f label="CPU Type" value=ovirt_cpu_type placeholder='Leave blank for default' help-inline='' cssId='ovirt_cpu_type'}}
    </form>
  </div>
</div>

    <div class='pull-right'>
      <br />
      {{#link-to 'deployments' class='btn btn-default'}}Cancel{{/link-to}}
      {{#link-to 'storage' class='btn btn-primary'}}Next{{/link-to}}
    </div>
