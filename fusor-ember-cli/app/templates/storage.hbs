<div class='row'>
  <div class='col-md-12'>
    <br />
    <form class="form form-horizontal">

      {{#base-f label="Storage Type" isRequired=true}}

        {{#radio-button value="NFS" groupValue=rhev_storage_type id='nfs'}}
          NFS
        {{/radio-button}}
        &nbsp;&nbsp;&nbsp;&nbsp;
        {{#radio-button value="Local" groupValue=rhev_storage_type id='local'}}
          Local
        {{/radio-button}}
        &nbsp;&nbsp;&nbsp;&nbsp;
        {{#radio-button value="Gluster" groupValue=rhev_storage_type id='gluster'}}
          Gluster
        {{/radio-button}}
      {{/base-f}}

      {{text-f label="Storage Address" value=rhev_storage_address placeholder='Leave blank for default' cssId='rhev_storage_address'}}
      {{text-f label="Share Path" value=rhev_share_path placeholder='Leave blank for default' cssId='rhev_share_path'}}

    </form>
  </div>
</div>

